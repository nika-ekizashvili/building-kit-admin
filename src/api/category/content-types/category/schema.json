      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "products": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product",
      "inversedBy": "categories"
    },
    "projects": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::project.project",
      "inversedBy": "categories"
    },
    "crafts": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::craft.craft",
      "mappedBy": "categories"
    }
